{
  "name": "@mcp-world/electron-app",
  "version": "1.0.0",
  "description": "PowerPak Desktop - Electron wrapper for Better Chatbot with system tray and PowerPak MCP integration",
  "main": "./dist/main.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc && electron .",
    "start": "electron .",
    "package": "electron-builder",
    "package:mac": "electron-builder --mac",
    "package:win": "electron-builder --win",
    "package:linux": "electron-builder --linux",
    "clean": "rm -rf dist"
  },
  "build": {
    "appId": "com.mcpworld.powerpak",
    "productName": "PowerPak Desktop",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "../better-chatbot/.next/**/*",
      "../better-chatbot/public/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "neo4j-driver": "^5.13.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "electron",
    "powerpak",
    "mcp",
    "chatbot",
    "desktop"
  ],
  "author": "MCP-World",
  "license": "MIT"
}

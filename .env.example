# PowerPak Environment Variables Template
# Copy to .env and fill in your values

# =============================================================================
# REQUIRED
# =============================================================================

# OpenAI API Key (for knowledge graph embeddings)
OPENAI_API_KEY=sk-your-openai-api-key-here

# =============================================================================
# OPTIONAL - Neo4j Configuration
# =============================================================================

# Neo4j connection (defaults shown)
NEO4J_URI=bolt://127.0.0.1:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=powerpak_password
NEO4J_DATABASE=neo4j

# Embedding model
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# =============================================================================
# OPTIONAL - Backend Integrations
# =============================================================================

# Slack MCP (for notifications)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_TEAM_ID=T0123456789

# GitHub MCP (for PR workflow)
GITHUB_PERSONAL_ACCESS_TOKEN=ghp_your-github-token

# =============================================================================
# OPTIONAL - Advanced Settings
# =============================================================================

# Audit log path
AUDIT_LOG_PATH=./.audit

# Queue and archive paths
QUEUE_PATH=./.queue
ARCHIVE_PATH=./.archive
